<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@color/color1"
    tools:context=".scenarios.scenario_login.Controller.login">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <include layout="@layout/connection_txt"/>
            <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/konzil_logo"
        android:layout_marginTop="@dimen/_15sdp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/twitter"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_15sdp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/gmail"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_8sdp"
        />
            <com.facebook.login.widget.LoginButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                xmlns:facebook="http://schemas.android.com/apk/res-auto"
                facebook:com_facebook_login_text="Continue With Facebook"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_8sdp"                android:textSize="@dimen/_12ssp"
                android:textColor="@android:color/white"
                android:id="@+id/fb_login"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:gravity="center"
                android:orientation="horizontal">
              <ImageView
                  android:layout_width="@dimen/_10sdp"
                  android:layout_height="@dimen/_10sdp"
                  android:layout_marginLeft="@dimen/_7sdp"
                  android:src="@drawable/or_bg"/>
              <ImageView
                  android:layout_width="@dimen/_9sdp"
                  android:layout_marginLeft="@dimen/_7sdp"
                  android:layout_height="@dimen/_9sdp"
                  android:src="@drawable/or_bg"/>
              <ImageView
                  android:layout_width="@dimen/_7sdp"
                  android:layout_height="@dimen/_7sdp"
                  android:layout_marginLeft="@dimen/_7sdp"
                  android:src="@drawable/or_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="@string/orrr"
                    android:textColor="@color/color2"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/or_bg"/>
                <ImageView
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:src="@drawable/or_bg"/>
                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:src="@drawable/or_bg"/>
            </LinearLayout>
            <EditText
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:hint="@string/e_mail_address"
                android:textSize="@dimen/_11ssp"
                android:paddingRight="@dimen/_10sdp"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:drawableRight="@drawable/ic_email_black_24dp"
                android:paddingLeft="@dimen/_5sdp"
                android:gravity="center"
                android:background="@drawable/form_bg"
                />
            <EditText
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:hint="@string/password"
                android:id="@+id/password"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                android:textSize="@dimen/_11ssp"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_5sdp"
                android:gravity="center"
                android:background="@drawable/form_bg"
                />
            <Button
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/log_in"
                android:textAllCaps="false"
                android:id="@+id/login"
                android:textSize="@dimen/_12ssp"
                android:textColor="@android:color/white"
                android:background="@drawable/buttom_bg"/>
            <CheckBox
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/check"
                android:textSize="@dimen/_11ssp"
                android:text="@string/allow_biomatric_authentication"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_account"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_now"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:textSize="@dimen/_12ssp"
                    android:id="@+id/signup"
                    android:textColor="@color/color2"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>