<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color1"
    tools:context=".scenarios.scenario_payment_methods.controller.pament_method">
   <include layout="@layout/toolbar_default"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/color2"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:id="@+id/price"
                android:textSize="@dimen/_13ssp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doctor_pay"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:textColor="@color/color2"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp"
                android:id="@+id/doc_name"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:textColor="@color/color2"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/_13ssp"
                android:id="@+id/type"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_your_payment_method"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        android:gravity="right"
        android:textColor="@color/color2"
        android:layout_marginRight="@dimen/_10sdp"
        />
   <ImageView
       android:layout_width="match_parent"
       android:layout_height="@dimen/_35sdp"
       android:id="@+id/paypal"
       android:scaleType="fitXY"
       android:layout_marginTop="@dimen/_30sdp"
       android:src="@drawable/paypal"
       android:layout_marginLeft="@dimen/_30sdp"
       android:layout_marginRight="@dimen/_30sdp"
       />
   <ImageView
       android:layout_width="match_parent"
       android:layout_height="@dimen/_35sdp"
       android:id="@+id/credit"
       android:layout_marginTop="@dimen/_20sdp"
       android:src="@drawable/credit"
       android:layout_marginLeft="@dimen/_30sdp"
       android:layout_marginRight="@dimen/_30sdp"
       />

    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_40sdp"
        android:weightSum="1"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/editPromo"
            android:layout_weight=".75"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/prome_code_here"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_13ssp"
            />
        <TextView
            android:id="@+id/txtSend"
            android:layout_weight=".25"
            android:layout_width="0dp"
            android:background="@drawable/copy_2"
            android:text="@string/send"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12ssp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>