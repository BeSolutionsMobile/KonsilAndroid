<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/item"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_height="@dimen/_66sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_58sdp"
        android:orientation="horizontal"
        android:weightSum="1">
       <LinearLayout
           android:layout_weight=".2"
           android:layout_width="0dp"
           android:gravity="center"
           android:orientation="vertical"
           android:layout_height="match_parent">
           <android.support.v7.widget.CardView
               android:layout_width="@dimen/_52sdp"
               android:layout_height="@dimen/_52sdp"
               app:cardCornerRadius="@dimen/_26sdp"
               android:padding="@dimen/_20sdp"
               app:cardBackgroundColor="@color/color2"
               android:layout_gravity="center"
               >
               <android.support.v7.widget.CardView
                   android:layout_width="@dimen/_50sdp"
                   android:layout_height="@dimen/_50sdp"
                   app:cardCornerRadius="@dimen/_25sdp"
                   app:cardBackgroundColor="@color/color1"
                   android:layout_gravity="center"
                   >
                   <de.hdodenhof.circleimageview.CircleImageView
                       android:layout_width="@dimen/_49sdp"
                       android:layout_height="@dimen/_49sdp"
                       android:id="@+id/doc_img"
                       android:src="@drawable/konzil_logo"
                       android:layout_gravity="center"
                       />
               </android.support.v7.widget.CardView>
           </android.support.v7.widget.CardView>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight=".55"
           android:gravity="center"
           android:paddingLeft="@dimen/_5sdp"
           android:paddingRight="@dimen/_5sdp"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Dr hossam"
               android:gravity="right"
               android:textColor="@color/color2"
               android:id="@+id/name"
               android:textSize="@dimen/_12ssp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Dr hossam"
               android:gravity="right"
               android:textColor="@color/color3"
               android:id="@+id/desc"
               android:textSize="@dimen/_11ssp"/>


       </LinearLayout>
        <LinearLayout
            android:layout_weight=".25"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:id="@+id/price"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/color2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/color2"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/buttom_bg"
                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/view"
                android:text="@string/view"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_9sdp"
                android:textAllCaps="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open"
                android:textAlignment="center"
                android:id="@+id/status"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_11ssp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_4sdp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_60sdp"
        android:layout_marginLeft="@dimen/_60sdp"
        android:src="@drawable/seprator"/>
</LinearLayout>