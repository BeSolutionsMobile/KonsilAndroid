<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/consulation_details"
    android:orientation="vertical"
    tools:context=".scenarios.scenario_online_conversation.Controller.online_conversation">
  <include layout="@layout/toolbar_default"
      android:id="@+id/toolbar_actionbar"
      />
    <co.ceryle.radiorealbutton.RadioRealButtonGroup
        android:id="@+id/radioRealButtonGroup_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        app:rrbg_borderColor="@color/color2"
        android:layoutDirection="ltr"
        app:rrbg_animateTexts_textColorTo="@android:color/white"
        app:rrbg_animateTexts_textColorFrom="@color/color2"
        android:layout_gravity="center_vertical"
        android:elevation="2dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        app:rrbg_animateTexts_enter="overshoot"
        app:rrbg_animateTexts_enterDuration="500"
        app:rrbg_backgroundColor="@color/color1"
        app:rrbg_bottomLineSize="2dp"
        app:rrbg_checkedPosition="1"
        app:rrbg_dividerColor="@color/cardview_light_background"
        app:rrbg_dividerPadding="0dp"
        app:rrbg_dividerRadius="0dp"
        app:rrbg_enableDeselection="false"
        app:rrbg_radius="10dp"
        app:rrbg_selectorAboveOfBottomLine="false"
        app:rrbg_selectorColor="@color/color4"
        app:rrbg_selectorFullSize="true"
        app:rrbg_selectorSize="0dp">
        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_drawableHeight="48dp"
            app:rrb_drawableWidth="48dp"
            app:rrb_text="@string/info"
            app:rrb_textColor="@color/color2"
            />
        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_drawableHeight="36dp"
            app:rrb_drawableWidth="36dp"
            app:rrb_text="@string/report"
            app:rrb_textColor="@color/color2"
            />
    </co.ceryle.radiorealbutton.RadioRealButtonGroup>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/frag"/>
</LinearLayout>