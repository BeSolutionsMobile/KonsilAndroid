<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scenarios.scenario_Consulation_result.Controller.Consulation_result.fragment_report.Controller.fragment_report">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:id="@+id/no_medical"
                android:textSize="@dimen/_15ssp"
                />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:id="@+id/setvisablitiy"
       android:visibility="gone"
       android:gravity="center"
       >
       <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/there_is_a_medical_report_for_case"
       android:gravity="center"
       android:layout_marginTop="@dimen/_40sdp"
       android:textSize="@dimen/_12ssp"
       android:textColor="@color/color3"
       />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/_250sdp"
           android:orientation="vertical"
           android:weightSum="1">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               >
               <ImageView
                   android:layout_width="@dimen/_50sdp"
                   android:layout_height="@dimen/_50sdp"
                   android:src="@drawable/downlaod"
                   android:id="@+id/download"
                   android:tint="@color/color4"
                   />
           </LinearLayout>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/_30sdp"
           android:gravity="center"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/_12ssp"
               android:text="@string/counseling_status"
               android:textColor="@color/color2"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/_12ssp"
               android:text="Closed"
               android:id="@+id/status"
               android:textColor="@color/color3"
               />
       </LinearLayout>

       <Button
           android:layout_width="match_parent"
           android:layout_height="@dimen/_27sdp"
           android:background="@drawable/make_complaint_bg"
           android:layout_marginBottom="@dimen/_15sdp"
           android:text="@string/make_a_complaint"
           android:textColor="@android:color/white"
           android:textAllCaps="false"
           android:id="@+id/make_complaint"
           android:textSize="@dimen/_12ssp"
           android:layout_marginLeft="@dimen/_15sdp"
           android:layout_marginRight="@dimen/_15sdp"
           />
   </LinearLayout>
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
</FrameLayout>