<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scenarios.scenario_compalint_details.compalint_details.compalint_details">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar_default"/>
        <include layout="@layout/connection_txt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
        <TextView
            android:layout_weight=".1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Complaint title here"
            android:gravity="center"
            android:textColor="@color/color2"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_12ssp"
            />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:id="@+id/message_list"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:orientation="horizontal"
                 android:weightSum="1"
                 android:gravity="center"
                 android:paddingRight="@dimen/_20sdp"
                 android:paddingLeft="@dimen/_20sdp"
                 android:layout_weight=".3">
                 <EditText
                     android:layout_weight=".7"
                     android:layout_width="0dp"
                     android:hint="@string/enter_message_here"
                     android:textSize="@dimen/_11ssp"
                     android:paddingLeft="@dimen/_10sdp"
                     android:layout_height="@dimen/_40sdp"
                     android:background="@drawable/send_txt_compalint"/>
                 <Button
                     android:layout_weight=".2"
                     android:layout_width="0dp"
                     android:background="@drawable/send_button_complaint"
                     android:layout_height="@dimen/_40sdp"
                     android:layout_marginLeft="@dimen/_7sdp"
                     android:text="@string/send"
                     android:textAllCaps="false"
                     android:textColor="@android:color/white"
                     android:textSize="@dimen/_12ssp"
                     />
             </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>