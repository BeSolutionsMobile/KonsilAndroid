<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color1"
    tools:context=".scenarios.scenario_make_complaint.make_a_complaint">
<include layout="@layout/toolbar_default"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/complaint_type"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/color2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_15sdp"
        >
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:backgroundTintMode="@color/color4"
            android:background="@drawable/faq_item_bg"
            />
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"/>
        
        <ImageView
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@color/color3"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_30sdp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/complaint_message"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/color2"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:padding="@dimen/_5sdp"
        android:gravity="top|left"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:background="@drawable/faq_item_bg"
        android:layout_marginTop="@dimen/_20sdp"/>
    <Button
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="@drawable/buttom_bg"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_gravity="center"
        android:id="@+id/make_complaint"
        android:text="Submit"
        android:textSize="@dimen/_11ssp"
        android:textColor="@android:color/white"
        android:textAllCaps="false"/>

</LinearLayout>