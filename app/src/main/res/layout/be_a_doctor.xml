<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color1"
    tools:context=".scenarios.scenario_be_a_doctor.Controller.be_a_doctor">

 <include layout="@layout/toolbar_default"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/_86sdp"
        android:layout_height="@dimen/_86sdp"
        app:cardCornerRadius="@dimen/_43sdp"
        android:id="@+id/upload_img"
        android:padding="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:cardBackgroundColor="@color/color3"
        android:layout_gravity="center"
        >
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_84sdp"
            android:layout_height="@dimen/_84sdp"
            app:cardCornerRadius="@dimen/_42sdp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/add_image"
                android:layout_gravity="center"
                />
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_your_photo"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/color3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_50sdp"
        android:weightSum="1"
        android:background="@drawable/personal_info_item_bg"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        >
        <ImageView
            android:background="@drawable/personal_info_image_bg"
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:src="@drawable/person_name"
            android:padding="@dimen/_5sdp"
            android:layout_height="match_parent"/>
        <EditText
            android:layout_weight=".85"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/add_your_name"
            android:gravity="center|left"
            android:background="@color/color1"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/color2"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/name"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:weightSum="1"
        android:background="@drawable/personal_info_item_bg"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        >
        <ImageView
            android:background="@drawable/personal_info_image_bg"
            android:layout_weight=".15"
            android:src="@drawable/at"
            android:padding="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <EditText
            android:layout_weight=".85"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/add_your_email"
            android:background="@color/color1"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/color2"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/email"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:weightSum="1"
        android:background="@drawable/personal_info_item_bg"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        >
        <ImageView
            android:background="@drawable/personal_info_image_bg"
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:src="@drawable/lock"
            android:tint="@android:color/white"
            android:padding="@dimen/_5sdp"
            android:layout_height="match_parent"/>
        <EditText
            android:layout_weight=".85"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/add_your_password"
            android:background="@color/color1"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:inputType="textPassword"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/color2"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/password"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:weightSum="1"
        android:background="@drawable/personal_info_item_bg"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        >
        <ImageView
            android:background="@drawable/personal_info_image_bg"
            android:layout_weight=".15"
            android:src="@drawable/phone"
            android:tint="@android:color/white"
            android:padding="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <EditText
            android:layout_weight=".85"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/add_your_phone"
            android:gravity="center|left"
            android:background="@color/color1"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:inputType="number"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/color2"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/phone"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="@drawable/buttom_bg"
        android:layout_marginTop="@dimen/_35sdp"
        android:text="@string/complete_the_request"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12ssp"
        android:layout_marginBottom="@dimen/_20sdp"
        />
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>