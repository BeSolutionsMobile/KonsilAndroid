<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scenarios.scenario_Consulation_result.Controller.Consulation_result.fragment_files.Controller.fragment_files">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight=".1"
        android:id="@+id/files"
        android:textColor="@color/color2"
        android:textSize="@dimen/_14ssp"
        android:text="@string/there_are_all_uploaded_file"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:id="@+id/file_list"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="counseling status :"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/color2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="closed"
            android:id="@+id/status"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/color3"/>

    </LinearLayout>

</LinearLayout>
     <ProgressBar
         android:layout_width="@dimen/_50sdp"
         android:layout_height="@dimen/_50sdp"
         android:id="@+id/pg"
         android:indeterminateTint="@color/color2"
         android:layout_centerInParent="true"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/black"
         android:textSize="@dimen/_13ssp"
         android:layout_centerInParent="true"
         android:id="@+id/nodata"/>
 </RelativeLayout>
</FrameLayout>