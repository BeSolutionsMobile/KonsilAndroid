<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/navgation_bg"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include layout="@layout/drawer_header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recyclerview_navigation_bg"
        >
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:layout_marginBottom="@dimen/_120sdp"
    android:id="@+id/drawerList"
    android:fitsSystemWindows="true"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" />

        <Button
            android:id="@+id/logout"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="91dp"
            android:background="@drawable/buttom_bg"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12ssp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:src="@color/color3"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_50sdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:id="@+id/change_lan"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_5sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/subject"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/change_language"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_10sdp"
                android:id="@+id/change_language"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_11ssp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>