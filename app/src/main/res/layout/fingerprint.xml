<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:background="@color/color1"
    tools:context="www.besolution.hatley.views.fingerprint.fingerprint">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/finger"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/color2"
        android:textStyle="bold"
        android:id="@+id/fingerprint"
        android:textSize="@dimen/_18ssp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_15sdp"
        android:tint="@color/color2"
        android:id="@+id/finger"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/finger"
        android:background="@drawable/finger_bg"
        />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            app:lottie_autoPlay="false"
            android:id="@+id/finger_unlock"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/unlock_finger"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:textColor="@color/color2"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:textSize="@dimen/_13ssp"/>
</LinearLayout>