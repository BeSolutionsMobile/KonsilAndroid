<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pro_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".scenarios.scenario_doctor_info.Controller.doctor_info">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <include layout="@layout/toolbar_default"
          android:id="@+id/toolbar_actionbar"
          />
      <android.support.v7.widget.CardView
          android:layout_width="@dimen/_86sdp"
          android:layout_height="@dimen/_86sdp"
          app:cardCornerRadius="@dimen/_43sdp"
          android:padding="@dimen/_20sdp"
          android:layout_marginTop="@dimen/_15sdp"
          app:cardBackgroundColor="@color/color3"
          android:layout_gravity="center"
          >
          <android.support.v7.widget.CardView
              android:layout_width="@dimen/_84sdp"
              android:layout_height="@dimen/_84sdp"
              app:cardCornerRadius="@dimen/_42sdp"
              app:cardBackgroundColor="@color/color1"
              android:layout_gravity="center"
              >
              <ImageView
                  android:layout_width="@dimen/_60sdp"
                  android:layout_height="@dimen/_60sdp"
                  android:src="@drawable/doctor_one"
                  android:layout_gravity="center"
                  />
          </android.support.v7.widget.CardView>
      </android.support.v7.widget.CardView>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Ahmed mohamed ali"
          android:gravity="center"
          android:layout_marginTop="@dimen/_3sdp"
          android:textColor="@color/color2"
          android:textSize="@dimen/_12ssp"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Dental Specialst"
          android:gravity="center"
          android:textColor="@android:color/black"
          />
      <RatingBar
          android:id="@+id/ratings"
          style="?android:attr/ratingBarStyleSmall"
          android:layout_width="wrap_content"
          android:isIndicator="true"
          android:focusable="false"
          android:clickable="false"
          android:scaleX="1.2"
          android:scaleY="1.2"
          android:layout_marginTop="@dimen/_7sdp"
          android:layout_gravity="center"
          android:stepSize=".2"
          android:layout_height="wrap_content"
          android:progressTint="@color/color4"
          android:progressBackgroundTint="#000000"
          android:secondaryProgressTint="#ffffff"
          android:numStars="5"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_35sdp"
          android:layout_marginTop="@dimen/_13sdp"
          android:layout_marginRight="@dimen/_32sdp"
          android:layout_marginLeft="@dimen/_32sdp"
          android:background="@drawable/doctor_details_bg"
          android:orientation="horizontal"
          android:weightSum="1"
          >
          <LinearLayout
              android:layout_weight=".2995"
              android:layout_width="0dp"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_height="match_parent">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/patients"
                  android:textSize="@dimen/_10ssp"
                  android:textColor="@color/color2"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="55"
                  android:textSize="@dimen/_10ssp"
                  android:textColor="@color/color2"
                  />
          </LinearLayout>
          <View
              android:layout_weight=".005"
              android:layout_width="0dp"
              android:background="@color/color3"
              android:layout_height="match_parent"/>
          <LinearLayout
              android:layout_weight=".4"
              android:layout_width="0dp"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_height="match_parent">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/consulation_price"
                  android:textSize="@dimen/_10ssp"
                  android:textColor="@color/color2"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="350"
                  android:textSize="@dimen/_10ssp"
                  android:textColor="@color/color2"
                  />
          </LinearLayout>
          <View
              android:layout_weight=".005"
              android:layout_width="0dp"
              android:background="@color/color3"
              android:layout_height="match_parent"/>
          <LinearLayout
              android:layout_weight=".2995"
              android:layout_width="0dp"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_height="match_parent">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/conversation"
                  android:textSize="@dimen/_10ssp"
                  android:textColor="@color/color2"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="350"
                  android:textSize="@dimen/_10ssp"
                  android:textColor="@color/color2"
                  />
          </LinearLayout>
      </LinearLayout>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingRight="@dimen/_50sdp"
          android:gravity="center"
          android:paddingLeft="@dimen/_50sdp"
          android:textColor="@android:color/black"
          android:layout_marginTop="@dimen/_15sdp"
          android:textSize="@dimen/_10ssp"
          android:text="Professor of Dermatology and Andrology ,aesthetic and Laser MD in Dermatology member of American Academy of Dermatology (AAD) member of European Academy of Dermatology (EADV) Member of Egyptian association of Dermatology and Venereology Vice-president of Delta association of Dermatology"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_32sdp"
          android:weightSum="1"
          android:layout_marginTop="@dimen/_15sdp"
          android:gravity="center"
          android:layout_marginRight="@dimen/_35sdp"
          android:layout_marginLeft="@dimen/_35sdp"
          android:orientation="horizontal">
          <Button
              android:layout_weight=".475"
              android:layout_width="0dp"
              android:paddingLeft="@dimen/_3sdp"
              android:paddingRight="@dimen/_3sdp"
              android:text="@string/request_consulation"
              android:textAllCaps="false"
              android:textSize="@dimen/_12ssp"
              android:id="@+id/request_consulation"
              android:textColor="@android:color/white"
              android:layout_height="match_parent"
              android:background="@drawable/request_consulation_bg"
              />
          <Button
              android:layout_weight=".025"
              android:layout_width="0dp"
              android:layout_height="match_parent"/>
          <Button
              android:layout_weight=".475"
              android:layout_width="0dp"
              android:paddingLeft="@dimen/_3sdp"
              android:id="@+id/online_res"
              android:paddingRight="@dimen/_3sdp"
              android:text="@string/requst_online_converstaion"
              android:textAllCaps="false"
              android:textSize="@dimen/_12ssp"
              android:textColor="@android:color/white"
              android:layout_height="match_parent"
              android:background="@drawable/request_online_conversation"
              />
      </LinearLayout>
     <ImageView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:scaleType="fitXY"
         android:src="@drawable/doctor_info_details"/>
  </LinearLayout>
</android.support.v4.widget.DrawerLayout>