<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"

    android:orientation="vertical"
    tools:context=".scenarios.scenario_personal_info.Controller.personal_info">

    <include layout="@layout/toolbar_default"
        android:id="@+id/toolbar_actionbar"/>
    <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:weightSum="1"
                 android:orientation="vertical">
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="0dp"
                     android:gravity="center"
                     android:weightSum="5"
                     android:orientation="vertical"
                     android:layout_weight=".6">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:orientation="horizontal"
                      android:weightSum="1"
                      android:background="@drawable/personal_info_item_bg"
                      android:layout_marginRight="@dimen/_30sdp"
                      android:layout_marginLeft="@dimen/_30sdp"
                      android:layout_weight=".5">
                      <ImageView
                          android:background="@drawable/personal_info_image_bg"
                          android:layout_weight=".15"
                          android:layout_width="0dp"
                          android:src="@drawable/person"
                          android:padding="@dimen/_7sdp"
                          android:tint="@android:color/white"
                          android:layout_height="match_parent"/>
                      <TextView
                          android:layout_weight=".85"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:text="mahmoud mohamed"
                          android:gravity="center|left"
                          android:paddingLeft="@dimen/_10sdp"
                          android:textColor="@color/color2"
                          android:textSize="@dimen/_12ssp"
                          android:id="@+id/name"
                          />
                  </LinearLayout>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight=".15"/>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:orientation="horizontal"
                      android:weightSum="1"
                      android:background="@drawable/personal_info_item_bg"
                      android:layout_marginRight="@dimen/_30sdp"
                      android:layout_marginLeft="@dimen/_30sdp"
                      android:layout_weight=".5">
                      <ImageView
                          android:background="@drawable/personal_info_image_bg"
                          android:layout_weight=".15"
                          android:src="@drawable/ic_email_black_24dp"
                          android:tint="@android:color/white"
                          android:padding="@dimen/_7sdp"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"/>
                      <TextView
                          android:layout_weight=".85"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:text="ibraheemmohamed@gmail.com"
                          android:gravity="center|left"
                          android:paddingLeft="@dimen/_10sdp"
                          android:textColor="@color/color2"
                          android:textSize="@dimen/_12ssp"
                          android:id="@+id/email"
                          />
                  </LinearLayout>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight=".15"/>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:orientation="horizontal"
                      android:weightSum="1"
                      android:background="@drawable/personal_info_item_bg"
                      android:layout_marginRight="@dimen/_30sdp"
                      android:layout_marginLeft="@dimen/_30sdp"
                      android:layout_weight=".5">
                      <ImageView
                          android:background="@drawable/personal_info_image_bg"
                          android:layout_weight=".15"
                          android:layout_width="0dp"
                          android:src="@drawable/lock"
                          android:padding="@dimen/_7sdp"
                          android:tint="@android:color/white"
                          android:layout_height="match_parent"/>
                      <TextView
                          android:layout_weight=".85"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:text="Change password"
                          android:gravity="center|left"
                          android:paddingLeft="@dimen/_10sdp"
                          android:textColor="@color/color2"
                          android:textSize="@dimen/_12ssp"
                          />
                  </LinearLayout>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight=".15"/>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:orientation="horizontal"
                      android:weightSum="1"
                      android:background="@drawable/personal_info_item_bg"
                      android:layout_marginRight="@dimen/_30sdp"
                      android:layout_marginLeft="@dimen/_30sdp"
                      android:layout_weight=".5">
                      <ImageView
                          android:background="@drawable/personal_info_image_bg"
                          android:layout_weight=".15"
                          android:layout_width="0dp"
                          android:src="@drawable/phone"
                          android:padding="@dimen/_7sdp"
                          android:tint="@android:color/white"
                          android:layout_height="match_parent"/>
                      <TextView
                          android:layout_weight=".85"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:text="Add your phone"
                          android:gravity="center|left"
                          android:paddingLeft="@dimen/_10sdp"
                          android:textColor="@color/color2"
                          android:textSize="@dimen/_12ssp"
                          />

                  </LinearLayout>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight=".15"/>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:orientation="horizontal"
                         android:weightSum="1"
                         android:background="@drawable/personal_info_item_bg"
                         android:layout_marginRight="@dimen/_30sdp"
                         android:layout_marginLeft="@dimen/_30sdp"
                         android:layout_weight=".5">
                         <ImageView
                             android:background="@drawable/personal_info_image_bg"
                             android:layout_weight=".15"
                             android:tint="@android:color/white"
                             android:src="@drawable/add_image"
                             android:padding="@dimen/_7sdp"
                             android:layout_width="0dp"
                             android:layout_height="match_parent"/>
                         <TextView
                             android:layout_weight=".85"
                             android:layout_width="0dp"
                             android:layout_height="match_parent"
                             android:text="Add your photo"
                             android:gravity="center|left"
                             android:paddingLeft="@dimen/_10sdp"
                             android:textColor="@color/color2"
                             android:textSize="@dimen/_12ssp"
                             android:id="@+id/change_pass"
                             />

                     </LinearLayout>
                 </LinearLayout>
                 <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="0dp"
                     android:layout_weight=".4"
                     android:src="@drawable/personal_info"
                     android:scaleType="fitXY"
                     />
             </LinearLayout>
</LinearLayout>