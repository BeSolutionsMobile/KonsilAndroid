<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scenarios.scenario_request_online_conversation.Controller.request_online_conversation">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:weightSum="1"
       android:orientation="vertical">
    <LinearLayout
        android:layout_weight=".6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
    <include layout="@layout/toolbar_default"
        android:id="@+id/toolbar_actionbar"
        />
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/_86sdp"
        android:layout_height="@dimen/_86sdp"
        app:cardCornerRadius="@dimen/_43sdp"
        android:padding="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:cardBackgroundColor="@color/color3"
        android:layout_gravity="center"
        >
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_84sdp"
            android:layout_height="@dimen/_84sdp"
            app:cardCornerRadius="@dimen/_42sdp"
            app:cardBackgroundColor="@color/color1"
            android:layout_gravity="center"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_83sdp"
                android:layout_height="@dimen/_83sdp"
                android:id="@+id/doc_img"
                android:layout_gravity="center"
                />
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ahmed mohamed ali"
        android:gravity="center"
        android:id="@+id/doc_name"
        android:layout_marginTop="@dimen/_3sdp"
        android:textColor="@color/color2"
        android:textSize="@dimen/_12ssp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dental Specialst"
        android:id="@+id/job_title"
        android:gravity="center"
        android:textColor="@android:color/black"
        />
    <RatingBar
        android:id="@+id/ratings"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:isIndicator="true"
        android:focusable="false"
        android:clickable="false"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_gravity="center"
        android:stepSize=".2"
        android:layout_height="wrap_content"
        android:progressTint="@color/color4"
        android:progressBackgroundTint="#000000"
        android:secondaryProgressTint="#ffffff"
        android:numStars="5"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conversation_hour_rate"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/color2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/color2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_marginLeft="@dimen/_2sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/color2"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:text="@string/appoinments_available_for_dr"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:text="@string/please_select_from_the_available_periods"
            android:textColor="@color/color2"
            android:textSize="@dimen/_11ssp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:hint="@string/tap_to_choose_desired_day"
            android:gravity="center"
            android:id="@+id/choose_date"
            android:layout_marginLeft="@dimen/_15sdp"/>
    </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:weightSum="1"
           android:orientation="vertical"
           android:layout_weight=".4">
           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight=".75">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
           <android.support.v7.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:paddingTop="@dimen/_10sdp"
               android:layout_marginLeft="@dimen/_15sdp"
               android:layout_marginRight="@dimen/_15sdp"
               android:id="@+id/reserv_list"
               />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       android:textSize="@dimen/_13ssp"
                       android:layout_centerInParent="true"
                       android:id="@+id/nomsg"/>
                   <ProgressBar
                       android:layout_width="@dimen/_50sdp"
                       android:layout_height="@dimen/_50sdp"
                       android:id="@+id/pg"
                       android:visibility="gone"
                       android:indeterminateTint="@color/color2"
                       android:layout_centerInParent="true"
                       />
               </RelativeLayout>
           </RadioGroup>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight=".25"
               android:orientation="vertical">
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_27sdp"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:background="@drawable/buttom_bg"
                   android:layout_marginBottom="@dimen/_15sdp"
                   android:text="@string/complete_the_request"
                   android:textColor="@android:color/white"
                   android:textAllCaps="false"
                   android:textSize="@dimen/_12ssp"
                   android:id="@+id/complete_req"
                   android:layout_marginLeft="@dimen/_15sdp"
                   android:layout_marginRight="@dimen/_15sdp"
                   />
           </LinearLayout>

       </LinearLayout>
   </LinearLayout>
</android.support.v4.widget.DrawerLayout>